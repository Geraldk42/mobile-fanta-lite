<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Bar Layout -->
    <LinearLayout
        android:id="@+id/linear_ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Back Arrow Icon -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/back_home"
            android:src="@drawable/baseline_arrow_back_icon" />

        <!-- Profile Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/profile"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Separator Line Below Top Bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E84797"
        android:layout_below="@+id/linear_ll"
        android:paddingRight="8dp"
        android:paddingLeft="8dp" />

    <!-- Profile Picture and Name -->

    <!-- Section Title: Account -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_ll"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="108dp"
            android:layout_height="96dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/user_profile_svgicon" /> <!-- Placeholder for profile pic -->


        <!-- Profile Name -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_name" />

        <!-- Can be set dynamically -->


    </LinearLayout>

    <TextView
        android:id="@+id/account_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E84797"
        android:layout_below="@id/profile_section"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <!-- Username Row -->
    <LinearLayout
        android:id="@+id/username_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/account_section"
        android:layout_margin="5dp"
        android:padding="5dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/username_icon" /> <!-- Replace with your icon -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Email Row -->
    <LinearLayout
        android:id="@+id/email_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/username_row"
        android:layout_margin="5dp"
        android:padding="5dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/envelope_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/privacy_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_and_security"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E84797"
        android:layout_below="@id/email_row"
        android:layout_marginTop="24dp" />


    <!-- Privacy and Security Options -->
    <LinearLayout
        android:id="@+id/privacy_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_below="@id/privacy_section"/>


        <!-- Online Status Button -->
    <LinearLayout
        android:id="@+id/online_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

    android:layout_below="@id/privacy_options"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:padding="1dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

    android:text="@string/online_status"
    android:textColor="@android:color/black"

    android:textSize="18sp" />

        <TextView
            android:id="@+id/online_status_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/online"
            android:textColor="@android:color/black"
            />

    <TextView
        android:id="@+id/online_status_option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/offline"
        android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/online_status_dropdown_arrow"
            android:layout_width="52dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/todo"
            android:src="@drawable/dropdown_arrow" />
</LinearLayout>

<LinearLayout
android:id="@+id/online_status_dropdown"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/online_status_container"
android:orientation="vertical"
android:paddingStart="24dp"
    android:paddingEnd="24dp"
android:visibility="gone" >



</LinearLayout>

<LinearLayout
android:id="@+id/calendar_access_container"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_below="@id/online_status_container"

    android:padding="1dp"
    android:layout_margin="8dp">

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/calendar_access"
android:textSize="18sp"
android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/calendar_access_option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/allow"
        android:textColor="@android:color/black" />

<TextView
android:id="@+id/calendar_access_option2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="8dp"
android:text="@string/deny"
android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/calendar_access_dropdown_arrow"
        android:layout_width="53dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/todo"
        android:src="@drawable/dropdown_arrow" />
    </LinearLayout>

<LinearLayout
android:id="@+id/calendar_access_dropdown"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/calendar_access_container"
android:orientation="vertical"
android:paddingLeft="24dp"
    android:paddingRight="24dp"
android:visibility="gone">

</LinearLayout>

    <!-- Similarly add for Account Type and Manage Friends -->
    <!-- Account type Button -->
    <LinearLayout
        android:id="@+id/account_type_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/calendar_access_container"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/account_type"
            android:textColor="@android:color/black"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/account_type_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="private"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/account_type_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="public"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/account_type_dropdown_arrow"
            android:layout_width="45dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/todo"
            android:src="@drawable/dropdown_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_type_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/online_status_container"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:visibility="gone">



    </LinearLayout>

    <!-- Account type Button -->
    <LinearLayout
        android:id="@+id/manage_friends_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/account_type_container"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/manage_friends"
            android:textColor="@android:color/black"

            android:textSize="18sp" />

    </LinearLayout>

    <!-- Notification Settings Section -->
    <TextView
        android:id="@+id/notification_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notifications"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E84797"
        android:layout_marginTop="24dp"
        android:layout_below="@id/manage_friends_container"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp" />

    <!-- Show Notification Toggle -->
    <LinearLayout
        android:id="@+id/notification_toggle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_section"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/show_notification_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/show_notifications"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/notification_switch"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:padding="48dp" />

    </LinearLayout>


</RelativeLayout>




